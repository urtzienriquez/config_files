#!/usr/bin/env sh

# Load theme
. "$HOME/config_files/fzf-nova/theme.sh"

export FZF_DEFAULT_OPTS="$FZF_THEME_OPTS -e -i --reverse --info=inline --scroll-off=5 \
  --tiebreak=index --bind 'home:first,end:last'"

selected=$(find . -type d -name '*.git' \
  | sed -r 's|/\.git$||' \
  | fzf --prompt='git repos >>> select repo to open: ')

[ -z "$selected" ] && exit

echo "$selected" | while read -r line; do
  setsid alacritty --working-directory $line >/dev/null 2>&1 & disown
  sleep 0.2
done
