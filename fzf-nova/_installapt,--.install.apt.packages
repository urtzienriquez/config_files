#!/usr/bin/env sh

# Load theme
. "$HOME/config_files/fzf-nova/theme.sh"

export FZF_DEFAULT_OPTS="$FZF_THEME_OPTS -e -i --reverse --info=right --scroll-off=5 \
  --tiebreak=index --bind 'home:first,end:last' --bind 'ctrl-t:first,ctrl-b:last' --preview 'bat -p --theme=tokyonight_night --color=always {}'"

apt-cache search '' \
	| sort \
	| cut --delimiter ' ' --fields 1 \
	| fzf --multi --cycle --reverse --preview 'apt-cache show {1}' \
	| xargs -r sudo apt install -y

sleep 10
