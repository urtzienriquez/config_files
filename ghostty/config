# theme
theme = tokyonight_moon
font-size = 14

# default shell
command = /usr/bin/zsh

# cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# keybindings
keybind = shift+control+k=scroll_page_lines:-1
keybind = shift+control+j=scroll_page_lines:1
keybind = shift+control+h=scroll_to_top
keybind = shift+control+l=scroll_to_bottom
keybind = control+g=text:lazygit\r

# padding
window-padding-balance = true
window-padding-x = 0
window-padding-y = 0

# window decoration
gtk-titlebar = false

# no confirm when closing
confirm-close-surface = false
