# This is the configuration file for Ghostty.
# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.

font-family = HackNerdFont Regular
font-family-bold = HackNerdFont Bold
font-family-italic = HackNerdFont Italic
font-family-bold-italic = HackNerdFont BoldItalic
# theme
theme = tokyonight

# cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor
# cursor-color = 000000

# keybindings
keybind = shift+up=scroll_page_lines:-1
keybind = shift+down=scroll_page_lines:1
keybind = shift+control+up=scroll_to_top
keybind = shift+control+down=scroll_to_bottom
keybind = shift+alt+right=goto_split:right
keybind = shift+alt+left=goto_split:left
keybind = shift+alt+down=goto_split:down
keybind = shift+alt+up=goto_split:up

# padding
window-padding-balance = true
window-padding-color = extend
window-padding-x = 0
window-padding-y = 0

# window decoration
window-decoration = none
