# theme
theme = Nightfox
font-size = 15
config-file = ~/.config/ghostty/local.config

# default shell
command = /usr/bin/zsh

# cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor
cursor-color = dbc074
cursor-text = 000000

# keybindings
keybind = shift+control+k=scroll_page_lines:-1
keybind = shift+control+j=scroll_page_lines:1
keybind = shift+control+h=scroll_to_top
keybind = shift+control+l=scroll_to_bottom

# padding
window-padding-balance = true
window-padding-color = extend-always
window-padding-x = 0
window-padding-y = 0

# window decoration
gtk-titlebar = false
window-decoration = none
window-theme = ghostty

# no confirm when closing
confirm-close-surface = false
