#!/usr/bin/env bash

# Use fzf to select multiple sessions (multi-select with Tab)
sessions=$(tmux list-sessions -F "#{session_name}" | fzf --info=right --reverse --multi --no-preview --prompt="Kill session(s): " --bind tab:toggle+up)

# Exit if nothing was selected
[[ -z "$sessions" ]] && exit 0

# Loop over selected sessions and kill them
while IFS= read -r session; do
  tmux kill-session -t "$session"
done <<< "$sessions"
