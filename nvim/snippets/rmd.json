{
    "Code Chunk": {
        "prefix": "rco",
        "body": [
            "```{${1:r}}",
            "$2",
            "```",
            "$0"
        ],
        "description": "add code chunk"
    },
    "Setup Code Chunk": {
        "prefix": "setup",
        "body": [
            "```{r setup}",
            "#| include: false",
            "knitr::opts_chunk\\$set(",
            "    echo = ${1:TRUE}",
            ")",
            "```",
            "$0"
        ],
        "description": "add setup code chunk"
    },
    "Image Code Chunk": {
        "prefix": "image",
        "body": [
            "```{r fig-${1:name}}",
            "knitr::include_graphics(\"${2:path/goes/here}\")",
            "```",
            "$0"
        ],
        "description": "add code chunk"
    },
    "yaml header": {
        "prefix": "head",
        "body": [
            "---",
            "title: ${1:title}",
            "author: ${2:author}",
            "$0",
            "---"
        ],
        "description": "add yaml header"
    }
}
