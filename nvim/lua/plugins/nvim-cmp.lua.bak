return {
	"hrsh7th/nvim-cmp",
	dependencies = {
		"hrsh7th/cmp-nvim-lsp",
		"hrsh7th/cmp-buffer",
		"hrsh7th/cmp-path",
		"urtzienriquez/citeref.nvim", -- ensure citeref loads first
	},
	event = "InsertEnter",
	config = function()
		-- Register the citeref source before cmp.setup() so nvim-cmp knows about it
		require("citeref.completion").register()

		local cmp = require("cmp")

		cmp.setup({
			mapping = cmp.mapping.preset.insert({
				["<C-Space>"] = cmp.mapping.complete(),
				["<C-e>"] = cmp.mapping.abort(),
				["<CR>"] = cmp.mapping.confirm({ select = true }),
				["<Tab>"] = cmp.mapping.select_next_item(),
				["<S-Tab>"] = cmp.mapping.select_prev_item(),
			}),

			sources = cmp.config.sources({
				{ name = "nvim_lsp" },
				{ name = "citeref" }, -- citeref source
				{ name = "buffer" },
				{ name = "path" },
			}),

			formatting = {
				format = function(entry, item)
					item.menu = ({
						nvim_lsp = "[LSP]",
						citeref = "[Cite]",
						buffer = "[Buf]",
						path = "[Path]",
					})[entry.source.name]
					return item
				end,
			},
		})
	end,
}
